@model IEnumerable<MP_TS_SHOP_.Models.User>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout Admin.cshtml";
}
<div class="py-3">
    <h2>New Provider Request</h2>

    <br />
    <table class="table">
        <tr>
            <th style="text-align:center">
                User Image
            </th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th style="text-align:center">
                Phone Number
            </th>
            <th style="text-align:center">
                User Location
            </th>

            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.Gender)
            </th>

            <th style="text-align:center">Details</th>
            <th style="text-align:center">Accsept</th>

            <th style="text-align:center">Reject</th>

        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td style="text-align:center">

                    <img style="height:70px;width:70px;border-radius:50%" src="~/Image/@Html.DisplayFor(modelItem => item.UserImage)" />
                </td>
                <td style="text-align:center"> 
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td style="text-align:center">
                    @Html.DisplayFor(modelItem => item.Email)
                </td>



                <td style="text-align:center">
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td style="text-align:center">
                    @Html.DisplayFor(modelItem => item.UserLocation)
                </td>

                @if (item.Gender == true)
                {
                    <td style="text-align:center">Female</td>
                }
                else
                {
                    <td style="text-align:center">Male</td>
                }

                <td style="text-align:center">
                    <a href="/Users/Details/@item.UserId"><i class="fa-regular fa-circle-info" style="color:#1E3050;font-weight:bolder;font-size:25px"></i></a>
                </td>
                <td style="text-align:center">
                    <a href="/Users/EditAcc/@item.UserId"><i class="fa-solid fa-check" style="color: #3cec68; font-weight: bolder; font-size: 25px"></i></a>

                </td>
                <td style="text-align:center">
                    <a href="/Users/EditReject/@item.UserId"><i class="fa-solid fa-xmark" style="color: #e01a1a; font-weight: bolder; font-size: 25px"></i></a>

                </td>

            </tr>
        }

    </table>
</div>