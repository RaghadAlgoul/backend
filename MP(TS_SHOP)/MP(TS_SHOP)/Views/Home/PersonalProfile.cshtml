
@{
    ViewBag.Title = "PersonalProfile";
}
@model  MP_TS_SHOP_.Controllers.HomeController.ViewModel

<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">
@Styles.Render("~/TS_SHOP/css")
@Styles.Render("~/PersonProfile/css")

!--
    - #MAIN
  -->

<main>

    <!--
      - #SIDEBAR
    -->

    <aside class="sidebar" data-sidebar>
        @foreach (var item in Model.User)
        {
            
            <div class="sidebar-info">

                <figure class="avatar-box">
                    <img src="~/Image/@item.UserImage"  alt="Your Image" width="80">
                </figure>

                <div class="info-content">
                    <h1 class="name" title="Name">@item.Name</h1>

                   
                </div>

                <button class="info_more-btn" data-sidebar-btn>
                    <span>Show Contacts</span>

                    <ion-icon name="chevron-down"></ion-icon>
                </button>

            </div>

            <div class="sidebar-info_more">

                <div class="separator"></div>

                <ul class="contacts-list">
                    <li class="contact-item">

                        <div class="icon-box">
                            <ion-icon name="mail-outline"></ion-icon>
                        </div>

                        <div class="contact-info">
                            <p class="contact-title">Email</p>

                            <a href="mailto:richard@example.com" class="contact-link" style="font-size:10px">@item.Email</a>
                        </div>

                    </li>
                    <li class="contact-item">

                        <div class="icon-box">
                            <ion-icon name="phone-portrait-outline"></ion-icon>
                        </div>

                        <div class="contact-info">
                            <p class="contact-title">Phone</p>

                            <a href="tel:+12133522795" class="contact-link">@item.PhoneNumber</a>
                        </div>

                    </li>

                    @*<li class="contact-item">

                        <div class="icon-box">
                            <ion-icon name="calendar-outline"></ion-icon>
                        </div>

                        <div class="contact-info">
                            <p class="contact-title">Birthday</p>

                            <time datetime="1982-06-23">June 23, 1982</time>
                        </div>

                    </li>*@

                    <li class="contact-item">

                        <div class="icon-box">
                            <ion-icon name="location-outline"></ion-icon>
                        </div>

                        <div class="contact-info">
                            <p class="contact-title">Location</p>

                            <address>@item.UserLocation</address>
                        </div>

                    </li>
                </ul>

                <div class="separator"></div>




            </div>

        }
    </aside>





    <!--
      - #main-content
    -->

    <div class="main-content">

        <!--
          - #NAVBAR
        -->

        <nav class="navbar">

            <ul class="navbar-list">

                <li class="navbar-item">
                    <button class="navbar-link  active" data-nav-link>About</button>
                </li>

                <li class="navbar-item">
                    <button class="navbar-link" data-nav-link>Comment</button>
                </li>

                <li class="navbar-item">
                    <button class="navbar-link" data-nav-link>Product</button>
                </li>

                <li class="navbar-item">
                    <button class="navbar-link" data-nav-link>Contact</button>
                </li>

            </ul>

        </nav>





        <!--
          - #ABOUT
        -->

        <article class="about  active" data-page="about">

            <header>
                <h2 class="h2 article-title">About me</h2>
            </header>
            @foreach (var item in Model.User)
            {
                
            <section class="about-text">
                

                <p style="display: inline-block">
                    @item.UserAbout
                </p>
            </section>
            <div style="display:flex;flex-direction:row">
                <div><a class="text-light" href="@item.UserFaceBook" target="_blank" rel="sponsored"><i class="fab fa-facebook-f fa-sm fa-fw me-2"></i></a></div>
                <div>
                    <a class="text-light" href="@item.UserInstagram" target="_blank"><i class="fab fa-instagram fa-sm fa-fw me-2"></i></a>
                </div>
                <div>
                    <a class="text-light" href="@item.UserTweeter" target="_blank"><i class="fab fa-twitter fa-sm fa-fw me-2"></i></a>
                </div>
            </div>
                
            }
            <!--
              - service
            -->

            <section class="service">
            </section>


            <!--
              - testimonials
            -->

            <section class="testimonials">
            </section>


            <!--
              - testimonials modal
            -->

            <div class="modal-container" data-modal-container>

                <div class="overlay" data-overlay></div>

                <section class="testimonials-modal">

                    <button class="modal-close-btn" data-modal-close-btn>
                        <ion-icon name="close-outline"></ion-icon>
                    </button>



                </section>

            </div>


            <!--
              - clients
            -->

            <section class="clients">
            </section>

        </article>










        <!--
          - #comment
        -->

