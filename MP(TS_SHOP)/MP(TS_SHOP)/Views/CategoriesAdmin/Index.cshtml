@model IEnumerable<MP_TS_SHOP_.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout Admin.cshtml";
}

<h2 class="py-3">Categories</h2>
<p>
    <a href="/CategoriesAdmin/Create" class="btn btn-primary">Add New Category</a>

</p>
<table class="table">

    <tr>
        <th>
            Category Num#
        </th>
        <th>
            Category Name
        </th>
        <th>
            Category Image
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                <img src="~/Image/@Html.DisplayFor(modelItem => item.CategoryImage)" style="height:70px;width:70px;border-radius:50%" />
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.CategoryId },new{ @class = "btn btn-success" }) ||
                @Html.ActionLink("Details", "Details", new { id = item.CategoryId }, new{ @class = "btn btn-secondary" }) ||
                @Html.ActionLink("Delete", "Delete", new { id = item.CategoryId },new{ @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
