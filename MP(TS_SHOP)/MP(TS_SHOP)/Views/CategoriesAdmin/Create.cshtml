@model MP_TS_SHOP_.Models.Category

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout Admin.cshtml";
}

<style>
    .custom-file-upload {
        border: 1px solid #ccc;
        display: inline-block;
        padding: 6px 12px;
        cursor: pointer;
    }

    input[type="file"] {
        display: none;
    }
</style>

<h2>Create</h2>

@using (Html.BeginForm("Create", "CategoriesAdmin", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Category</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.CategoryName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10 ">
                <div class="col-4">@Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control" } })</div>
                @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CategoryImage, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <label class="custom-file-upload">
                    <input type="file" accept="image/*" name="Image" class="form-control btn btn-secondary" />
                    Upload Image
                </label>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-1">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-success" />
                </div>
            </div>

            <div class="col-4">
                <a href="/CategoriesAdmin/Index" class="btn btn-primary">Back to List</a>
            </div>
        </div>

    </div>
}