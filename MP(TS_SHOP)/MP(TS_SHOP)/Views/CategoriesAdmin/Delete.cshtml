@model MP_TS_SHOP_.Models.Category

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout Admin.cshtml";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Category</h4>
    <hr />
    <dl class="dl-horizontal">
        <div class="row">
            <dt class="col-2" style="font-weight:bold">
                Category Name :
            </dt>
            <dd class="col-4">
                @Html.DisplayFor(model => model.CategoryName)
            </dd>
        </div>
        <br />
        <div class="row">
            <dt class="col-2" style="font-weight:bold">
                Category Image :
            </dt>
            <dd class="col-4">
                <img style="height:100px;width:100px" src="~/Image/@Html.DisplayFor(model => model.CategoryImage)" />
            </dd>
        </div>




    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

<div class="form-actions no-color">
    <input type="submit" value="Delete" class="btn btn-danger" /> 
    <a href="/CategoriesAdmin/Index" class="btn btn-primary">Back to List</a>
</div>
    }
</div>
