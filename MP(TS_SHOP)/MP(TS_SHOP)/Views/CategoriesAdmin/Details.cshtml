@model MP_TS_SHOP_.Models.Category

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout Admin.cshtml";
}

<h2>Details</h2>

<div>
    <h4>Category</h4>
    <hr />
    <dl class="dl-horizontal">
        <div class="row">
            <dt class="col-2" style="font-weight:bold">
                Category Name :
            </dt>
            <dd class="col-4">
                @Html.DisplayFor(model => model.CategoryName)
            </dd>
        </div>
        <br />
        <div class="row">
            <dt class="col-2" style="font-weight:bold">
                Category Image :
            </dt>
            <dd class="col-4" >
                <img style="height:100px;width:100px" src="~/Image/@Html.DisplayFor(model => model.CategoryImage)" />            </dd>
        </div>


       

    </dl>
</div>
<p>
    <a href="/CategoriesAdmin/Edit/@Model.CategoryId" class="btn btn-success">Edit</a>

    <a href="/CategoriesAdmin/Index" class="btn btn-primary">Back to List</a>
</p>
