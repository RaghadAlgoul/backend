@model MP_TS_SHOP_.Models.Category

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout Admin.cshtml";
}
<style>
    .custom-file-upload {
        display: inline-block;
        padding: 6px 12px;
        cursor: pointer;
        text-align: center;
        margin : 30px 20px;
    }

    input[type="file"] {
        display: none;
    }

    .grid-containe {
        display: grid;
        grid-template-columns: auto auto auto auto auto;
        justify-content: space-between;
    }
</style>
<h2>Edit</h2>

@using (Html.BeginForm("Edit", "CategoriesAdmin", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Category</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.CategoryId)

    <div class="form-group ">

        <div class="col-md-10 row">
            <div class="col-3">
                @Html.LabelFor(model => model.CategoryName, htmlAttributes: new { @class = "control-label col-md-2" })
            </div>
            <div class="col-8"> @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control" } })</div>
            @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group ">

        <div class="col-md-10 row">
            <div class="col-3">
                @Html.LabelFor(model => model.CategoryImage, htmlAttributes: new { @class = "control-label col-md-2" })
            </div>
            <div class="col-8">
                <div class="row">
                    <div class="col-2"><img style="height:100px;width:100px" src="~/Image/@Html.DisplayFor(model => model.CategoryImage)" /></div><div class="col">
                        <label class="custom-file-upload btn btn-secondary">
                            <input type="file" accept="image/*" name="Image" class="form-control " />
                            Upload New Image 
                        </label>
                    </div>
                </div>
            </div>
            @Html.ValidationMessageFor(model => model.CategoryImage, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group row">
        <div class="col-1">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </div>
        
        <div class="col-4">
            <a href="/CategoriesAdmin/Index" class= "btn btn-primary">Back to List</a>
    </div>
    </div>
    
</div>
}


