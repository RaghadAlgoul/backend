@model IEnumerable<MP_TS_SHOP_.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Start Article -->
<section class="py-5">
    <div class="container">
        <h2 class="TextColor">Products</h2>
        <br />
        <p>
            <a href="/ProductsProvider/Create" style="font-weight:bold;background-color:#E26F66;color:#F3F5F9;text-decoration:none;font-weight:bold;padding: 7px;border-radius: 10px;">Add New Product</a>
        </p>
        <br />
        <!--Start Carousel Wrapper-->
        <div id="carousel-related-product" class="ProductsSec">

            @foreach (var item in Model)
            {
                if (item.UserID == ViewBag.UserId)
                {
                    <div class="p-2 pb-3" style="width:300px">
                        <div class="product-wap card rounded-0" style="border: solid 5px #497174;">
                            <div class="card rounded-0" style="border: none">
                                <img src="~/Image/@item.Image1" class="card-img rounded-0 img-fluid " style="padding: 10px 6px; width: 100%; height: 280px" />
                                <div class="card-img-overlay rounded-0 product-overlay d-flex align-items-center justify-content-center">
                                    <ul class="list-unstyled">

                                        <li><a class="btn text-white mt-2" href="/ProductsProvider/Edit/@item.ProductId" style="background-color: #497174;width:40px"><i class="fa-solid fa-pen-to-square"></i></a></li>
                                        <li><a class="btn text-white mt-2" href="/ProductsProvider/Details/@item.ProductId" style="background-color: #497174; width: 40px"><i style="text-align:center" class="fa-solid fa-eye"></i></a></li>
                                        <li><a class="btn text-white mt-2" href="/ProductsProvider/Delete/@item.ProductId" style="background-color: #497174; width: 40px"><i class="fa-solid fa-trash"></i></a></li>

                                    </ul>
                                </div>
                            </div>
                            <div class="card-body">
                                <a class="h2 text-decoration-none" style="color: #497174;font-weight:bold">@item.Name</a>


                                <br />

                                <ul class="w-100 list-unstyled d-flex justify-content-between mb-0">
                                    <li style="color: #E26F66; font-family: Arial; float: left">@item.Price JD</li>
                                    @*<li style="color: #e26f66; font-family: Arial; float: right"><i class="far fa-heart"></i></li>*@
                                </ul>
                                @*@if (item.State == true)
                                {
                                    <a class="h4 text-decoration-none" style="color: #497174;">New</a>

                                }
                                else
                                {
                                    <a class="h5 text-decoration-none" style="color: #497174;">Old</a>

                                }*@
                            </div>
                        </div>
                    </div>

                }
            }

        </div>
    </div>
</section>
