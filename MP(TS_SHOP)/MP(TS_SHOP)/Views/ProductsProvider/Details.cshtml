@model MP_TS_SHOP_.Models.Product

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="py-5">
    <h2 class="TextColor">Details</h2>
    <!-- Modal -->
    <div class="modal fade bg-white" id="templatemo_search" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="w-100 pt-1 mb-5 text-right">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form action="" method="get" class="modal-content modal-body border-0 p-0">
                <div class="input-group mb-2">
                    <input type="text" class="form-control" id="inputModalSearch" name="q" placeholder="Search ...">
                    <button type="submit" class="input-group-text bg-success text-light">
                        <i class="fa fa-fw fa-search text-white"></i>
                    </button>
                </div>
            </form>
        </div>
    </div>




    <!-- Open Content -->
    <section>
        <div class="container pb-5">
            <div class="row">
                <div class="col-lg-5 mt-5">
                    <div class="card mb-3">
                        <img class="card-img img-fluid" alt="Card image cap" id="product-detail" src="~/Image/@Html.DisplayFor(model => model.Image1)" style="width: 100%; height: 440px; padding: 10px; border: solid 2px #497174" />
                    </div>
                    <div class="row">
                        <!--Start Controls-->
                        <div class="col-1 align-self-center">
                            <a href="#multi-item-example" role="button" data-bs-slide="prev">
                                <i class="text-dark fas fa-chevron-left"></i>
                                <span class="sr-only">Previous</span>
                            </a>
                        </div>
                        <!--End Controls-->
                        <!--Start Carousel Wrapper-->
                        <div id="multi-item-example" class="col-10 carousel slide carousel-multi-item" data-bs-ride="carousel">
                            <!--Start Slides-->
                            <div class="carousel-inner product-links-wap" role="listbox">

                                <!--First slide-->
                                <div class="carousel-item active">
                                    <div class="row">
                                        <div class="col-4">
                                            <a href="#">
                                                @if (@Html.DisplayFor(model => model.Image2) != null)
                                                {
                                                    <img class="card-img img-fluid" src="~/Image/@Html.DisplayFor(model => model.Image2)" alt="Product Image 1" style="width: 100%; padding: 10px; border: solid 2px #497174; background-color: white">

                                                }
                                            </a>
                                        </div>
                                        <div class="col-4">
                                            <a href="#">
                                                @if (@Html.DisplayFor(model => model.Image3) != null)
                                                {
                                                    <img class="card-img img-fluid" src="~/Image/@Html.DisplayFor(model => model.Image3)" alt="Product Image 1" style="width: 100%; padding: 10px; border: solid 2px #497174; background-color: white">

                                                }
                                            </a>
                                        </div>
                                        <div class="col-4">
                                            <a href="#">
                                                @if (@Html.DisplayFor(model => model.Image4) != null)
                                                {
                                                    <img class="card-img img-fluid" src="~/Image/@Html.DisplayFor(model => model.Image4)" alt="Product Image 1" style="width: 100%; padding: 10px; border: solid 2px #497174; background-color: white">

                                                }
                                            </a>
                                        </div>
                                    </div>
                                </div>
                                <!--/.First slide-->
                                <!--Second slide-->
                                <div class="carousel-item">
                                    <div class="row">
                                        <div class="col-4">
                                            <a href="#">
                                                @if (@Html.DisplayFor(model => model.Image5) != null)
                                                {
                                                    <img class="card-img img-fluid" src="~/Image/@Html.DisplayFor(model => model.Image5)" alt="Product Image 1" style="width: 100%; padding: 10px; border: solid 2px #497174; background-color: white">

                                                }
                                            </a>
                                        </div>
                                        <div class="col-4">
                                            <a href="#">
                                                @if (@Html.DisplayFor(model => model.Image6) != null)
                                                {
                                                    <img class="card-img img-fluid" src="~/Image/@Html.DisplayFor(model => model.Image6)" alt="Product Image 1" style="width: 100%; padding: 10px; border: solid 2px #497174; background-color: white">

                                                }
                                            </a>
                                        </div>
                                        <div class="col-4">
                                            <a href="#">
                                                @if (@Html.DisplayFor(model => model.Image7) != null)
                                                {
                                                    <img class="card-img img-fluid" src="~/Image/@Html.DisplayFor(model => model.Image7)" alt="Product Image 1" style="width: 100%; padding: 10px; border: solid 2px #497174; background-color: white">

                                                }
                                            </a>
                                        </div>
                                    </div>
                                </div>
                                <!--/.Second slide-->
                                <!--Third slide-->
                                <div class="carousel-item">
                                    <div class="row">
                                        <div class="col-4">
                                            <a href="#">
                                                @if (@Html.DisplayFor(model => model.Image8) != null)
                                                {
                                                    <img class="card-img img-fluid" src="~/Image/@Html.DisplayFor(model => model.Image8)" alt="Product Image 1" style="width: 100%; padding: 10px; border: solid 2px #497174; background-color: white">

                                                }
                                            </a>
                                        </div>
                                        <div class="col-4">
                                            <a href="#">
                                                @if (@Html.DisplayFor(model => model.Image9) != null)
                                                {
                                                    <img class="card-img img-fluid" src="~/Image/@Html.DisplayFor(model => model.Image9)" alt="Product Image 1" style="width: 100%; padding: 10px; border: solid 2px #497174; background-color: white">

                                                }
                                            </a>
                                        </div>
                                        <div class="col-4">
                                            <a href="#">
                                                @if (@Html.DisplayFor(model => model.Image10) != null)
                                                {
                                                    <img class="card-img img-fluid" src="~/Image/@Html.DisplayFor(model => model.Image10)" alt="Product Image 1" style="width: 100%; padding: 10px; border: solid 2px #497174; background-color: white">

                                                }
                                            </a>
                                        </div>
                                    </div>
                                </div>
                                <!--/.Third slide-->
                            </div>
                            <!--End Slides-->
                        </div>
                        <!--End Carousel Wrapper-->
                        <!--Start Controls-->
                        <div class="col-1 align-self-center">
                            <a href="#multi-item-example" role="button" data-bs-slide="next">
                                <i class="text-dark fas fa-chevron-right"></i>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                        <!--End Controls-->
                    </div>
                </div>
                <!-- col end -->
                <div class="col-lg-7 mt-5">
                    <div class="card" style="border: solid 2px #497174">
                        <div class="card-body">
                            <h1 class="h2" style="font-weight: bold">@Html.DisplayFor(model => model.Name)</h1>
                            <br />



                            <div style="height: 228px">
                                <p>@Html.DisplayFor(model => model.Description)</p>
                            </div>

                            <b style="font-weight: bold; padding: 5px 0px">Specification:</b>
                            <br />
                            <ul class="list-unstyled pb-3">

                                @if (@Html.DisplayFor(model => model.State).ToString() == "1")
                                {
                                    <li style="color: black; background-color: #497174; padding: 5px 10px; border-radius: 12px; color: #F3F5F9; width: max-content; margin-top: 8px; width: 180px; font-family: Arial">State : New </li>

                                }
                                else
                                {
                                    <li style="color: black; background-color: #497174; padding: 5px 10px; border-radius: 12px; color: #F3F5F9; width: max-content; margin-top: 8px; width: 180px; font-family: Arial">State : Used </li>

                                }
                                <li style="color: black; background-color: #497174; padding: 5px 10px; border-radius: 12px; color: #F3F5F9; width: max-content; margin-top: 8px; width: 180px; font-family: Arial">Category :@Html.DisplayFor(model => model.Category.CategoryName)</li>
                                <li style="color: black; background-color: #497174; padding: 5px 10px; border-radius: 12px; color: #F3F5F9; width: max-content; margin-top: 8px; width: 180px; font-family: Arial">Price : @Html.DisplayFor(model => model.Price) JOD</li>
                                <li style="color: black; background-color: #497174; padding: 5px 10px; border-radius: 12px; color: #F3F5F9; width: max-content; margin-top: 8px; width: 180px; font-family: Arial">Size : @Html.DisplayFor(model => model.Size) EU</li>
                                <li style="color: black; background-color: #497174; padding: 5px 10px; border-radius: 12px; color: #F3F5F9; width: max-content; margin-top: 8px; width: 180px; font-family: Arial">Color  : @Html.DisplayFor(model => model.Color)</li>

                            </ul>

                            <div class="row">
                                <div class="col-1"><a href="/ProductsProvider/Edit/@Html.DisplayFor(model => model.ProductId)" class="btn btn-success">Edit</a></div>
                                <div class="col-1"><a href="/ProductsProvider/Delete/@Html.DisplayFor(model => model.ProductId)" class="btn btn-danger">Delete</a></div>
                                <div class="col-4"><a href="/ProductsProvider/Index/@Html.DisplayFor(model => model.ProductId)" style="margin-left:20px" class="btn btn-primary">Back To All Products</a></div>

                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<script>
        $('#carousel-related-product').slick({
            infinite: true,
            arrows: false,
            slidesToShow: 4,
            slidesToScroll: 3,
            dots: true,
            responsive: [{
                    breakpoint: 1024,
                    settings: {
                        slidesToShow: 3,
                        slidesToScroll: 3
                    }
                },
                {
                    breakpoint: 600,
                    settings: {
                        slidesToShow: 2,
                        slidesToScroll: 3
                    }
                },
                {
                    breakpoint: 480,
                    settings: {
                        slidesToShow: 2,
                        slidesToScroll: 3
                    }
                }
            ]
        });
</script>