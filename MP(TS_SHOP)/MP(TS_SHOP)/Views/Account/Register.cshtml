@model MP_TS_SHOP_.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}


<section class="vh-100" style="background-color: #F3F5F9;">
    <div class="container h-100">
        <div class="row d-flex justify-content-center  h-100">
            <div class="col-lg-12 col-xl-11">
                <div class="card text-black" style="border:none;background-color:#F3F5F9">
                    <div class="card-body p-md-5" style="padding-top:-50px">
                        <div class="row justify-content-center">
                            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4" style="color: #E26F66; font-weight: bold; font-family: Arial; text-align: left">Sign up</p>
                                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "mx-1 mx-md-4", role = "form" }))
                                {
                                    @Html.AntiForgeryToken()

                                    @Html.ValidationSummary("", new { @class = "text-danger" })











                                    <div id="sectionOne">
                                        <div class=" d-flex flex-row align-items-center mb-4">
                                            <i class="fas  fa-user me-3  fa-lg  fa-fw" style="color:#497174"></i>
                                            <div class="form-outline flex-fill mb-0">
                                                @Html.TextBoxFor(m => m.Name, new { @class = "form-control", id = "name" })

                                                <label class="form-label" for="name" style="color:#497174">Name</label>
                                            </div>
                                        </div>
                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <i class="fas fa-envelope fa-lg me-3 fa-fw" style="color:#497174"></i>
                                            <div class="form-outline flex-fill mb-0">
                                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", id = "form3Example3c" })
                                                <label class="form-label" for="form3Example3c" style="color:#497174">Your Email</label>
                                            </div>
                                        </div>
                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <i class="fas fa-lock fa-lg me-3 fa-fw" style="color:#497174"></i>
                                            <div class="form-outline flex-fill mb-0">
                                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", id = "form3Example4c" })
                                                <label class="form-label" for="form3Example3c" style="color:#497174">Password</label>
                                            </div>
                                        </div>

                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <i class="fas fa-key fa-lg me-3 fa-fw" style="color:#497174"></i>
                                            <div class="form-outline flex-fill mb-0">
                                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", id = "form3Example4cd" })

                                                <label class="form-label" for="form3Example4cd" style="color:#497174">Repeat your password</label>
                                            </div>
                                        </div>
                                        <div class="d-flex flex-row align-items-center mb-4">

                                            <div class="form-outline flex-fill mb-0" style="position:relative">
                                                <div class="col-md-offset-2 col-md-10">
                                                    @*<div class="Next" onclick="Next()" style="background-color: #E26F66;border: none; position: absolute;right:0px ;text-align:center;border-radius:7px;cursor:pointer"><span class="NextText" style="padding: 20px; font-weight: bold; color: #F3F5F9">Next</span></div>*@
                                                    <input type="button" class="btn btn-primary btn-lg" value="Next" onclick="NextOne()" style="background-color: #e26f66; color: #F3F5F9; border: none; position: absolute;right:0px" />

                                                </div>
                                            </div>
                                        </div>

                                    </div>
















                                    <div id="sectionTwo" style="display:none">

                                        <div class=" d-flex flex-row align-items-center mb-4">
                                            <i class="fas  fa-phone me-3  fa-lg  fa-fw" style="color:#497174"></i>
                                            <div class="form-outline flex-fill mb-0">
                                                <input type="text" class="form-control" id="PhoneNumber" name="PhoneNumber" />
                                                <label class="form-label TextColor" for="PhoneNumber">Phone Number</label>
                                            </div>
                                        </div>
                                        <div class=" d-flex flex-row align-items-center mb-4">
                                            <i class=" fa-brands fa-facebook-f me-3  fa-lg  fa-fw" style="color:#497174"></i>
                                            <div class="form-outline flex-fill mb-0">
                                                <input type="text" class="form-control" id="facebook" name="facebook" />

                                                <label class="form-label TextColor" for="facebook">Facebook Link</label>
                                            </div>
                                        </div>
                                        <div class=" d-flex flex-row align-items-center mb-4">
                                            <i class="fa-brands fa-instagram me-3  fa-lg  fa-fw" style="color:#497174"></i>
                                            <div class="form-outline flex-fill mb-0">
                                                <input type="text" class="form-control" id="insta" name="insta" />

                                                <label class="form-label TextColor" for="insta">Instagram Link</label>
                                            </div>
                                        </div>
                                        <div class=" d-flex flex-row align-items-center mb-4">
                                            <i class="fa-brands  fa-twitter me-3  fa-lg  fa-fw" style="color:#497174"></i>
                                            <div class="form-outline flex-fill mb-0">
                                                <input type="text" class="form-control" id="twitter" name="twitter" />

                                                <label class="form-label TextColor" for="twitter" style="color:#497174">Twitter Link </label>
                                            </div>
                                        </div>









                                        <div class="d-flex flex-row align-items-center mb-4">

                                            <div class="form-outline flex-fill mb-0" style="position:relative">
                                                <div class="col-md-offset-2 col-md-10">
                                                    @*<div class="Next" onclick="Next()" style="background-color: #E26F66;border: none; position: absolute;right:0px ;text-align:center;border-radius:7px;cursor:pointer"><span class="NextText" style="padding: 20px; font-weight: bold; color: #F3F5F9">Next</span></div>*@
                                                    <input type="button" class="btn btn-primary btn-lg" value="Next" onclick="NextTwo()" style="background-color: #e26f66; color: #F3F5F9; border: none; position: absolute;right:0px" />

                                                </div>
                                            </div>
                                        </div>
                                    </div>












                                    <div id="sectionThree" style="display:none">

                                        <div class=" d-flex flex-row align-items-center mb-4">
                                            <div class="form-outline flex-fill mb-0">
                                                <input type="text" class="form-control" id="location" name="location" />
                                                <label class="form-label TextColor" for="location">Your Location</label>

                                            </div>
                                        </div>
                                        <div class=" d-flex flex-row align-items-center mb-4">
                                            <div class="form-outline flex-fill mb-0">
                                                <textarea class="form-control" name="about" id="about"></textarea>
                                                <label class="form-label TextColor" for="location">About Yourself</label>

                                            </div>
                                        </div>
                                        <div class=" d-flex flex-row align-items-center mb-4">
                                            <div class="form-outline flex-fill mb-0">
                                                <div class="row">
                                                    <div class="col-md-6 mb-4">
                                                        <label class="form-label TextColor" for="location">Gender</label>
                                                        <select name="gender" class="select form-control">
                                                            <option class="TextColor" value="1">Female</option>
                                                            <option class="TextColor" value="2">Male</option>

                                                        </select>

                                                    </div>
                                                    <div class="col-md-6 mb-4">
                                                        <label class="form-label TextColor" for="location">Role</label>
                                                        <select name="role" class="select form-control">
                                                            <option class="TextColor"  value="1">Saller</option>
                                                            <option class="TextColor" value="2">Buyer</option>

                                                        </select>

                                                    </div>
                                                </div>


                                            </div>
                                        </div>

                                        









                                        <div class="d-flex flex-row align-items-center mb-4">

                                            <div class="form-outline flex-fill mb-0" style="position:relative">
                                                <div class="col-md-offset-2 col-md-10">
                                                    <input type="submit" class="btn btn-primary btn-lg" value="Sign Up" style="background-color: #e26f66; color: #F3F5F9; border: none; position: absolute;right:0px" />
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                }

                            </div>
                            <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                                <img src="~/Image/register.png" class="img-fluid" alt="Sample image" style="padding:55px" />

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br />
</section>
<br />
<br />



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<script>
    function NextOne() {
        const element = document.getElementById("sectionOne")
        element.classList.add("sectionOne")
        element.style.display = "none"
        
        const element2 = document.getElementById("sectionTwo")
        element2.classList.add("sectionTwo")
        element2.style.display = "block"
    }

    function NextTwo() {
        const element = document.getElementById("sectionOne")
        element.classList.add("sectionOne")
        element.style.display = "none"
        const element2 = document.getElementById("sectionTwo")
        element2.classList.add("sectionTwo")
        element2.style.display = "none"
        const element3 = document.getElementById("sectionThree")
        element3.classList.add("sectionThree")
        element3.style.display = "block"
    }

</script>