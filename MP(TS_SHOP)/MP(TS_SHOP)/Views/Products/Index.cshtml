@model IEnumerable<MP_TS_SHOP_.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout Admin.cshtml";
}

<h2 class="py-3">New Product</h2>
<br />

@*<p>
    @Html.ActionLink("Create New", "Create")
</p>*@
<table class="table">
    <tr >
        <th style="text-align:center">
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th style="text-align:center">
            Category Name
        </th>
        <th style="text-align:center">
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th style="text-align:center">
            @Html.DisplayNameFor(model => model.Size)
        </th>
        <th style="text-align:center">
            @Html.DisplayNameFor(model => model.Color)
        </th>


        <th style="text-align:center">
            First Image

        </th>
        <th style="text-align:center">Details</th>
        <th style="text-align:center">Accept</th>

        <th style="text-align:center">Reject</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td style="text-align:center">
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td style="text-align:center">
            @Html.DisplayFor(modelItem => item.Category.CategoryName)
        </td>

        <td style="text-align:center">
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td style="text-align:center">
            @Html.DisplayFor(modelItem => item.Size)
        </td>
        <td style="text-align:center">
            @Html.DisplayFor(modelItem => item.Color)
        </td>


        <td style="text-align:center">

            <img src="~/Image/@Html.DisplayFor(modelItem => item.Image1)" style="height:70px;width:70px;" />
        </td>


        <td style="text-align:center">
            <a href="/Products/Details/@item.ProductId"><i class="fa-regular fa-circle-info" style="color:#1E3050;font-weight:bolder;font-size:25px"></i></a>
        </td>
        <td style="text-align:center">
            <a href="/Products/EditAcc/@item.ProductId"><i class="fa-solid fa-check" style="color: #3cec68; font-weight: bolder; font-size: 25px"></i></a>
        </td>
        <td style="text-align:center">
            <a href="/Products/EditReject/@item.ProductId"><i class="fa-solid fa-xmark" style="color: #e01a1a; font-weight: bolder; font-size: 25px"></i></a>
        </td>
        
    </tr>
}

</table>
